<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cristianomoraiscruz.pontodetaxi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.AddTaxistaActivity"
            android:label="Adicionar Taxista"
            android:parentActivityName=".view.MainActivity">
        </activity>
        <activity android:name=".view.ListActivity"
            android:label="Lista de Taxistas"
            android:parentActivityName=".view.MainActivity">
        </activity>
        <activity android:name=".view.SobreActivity"
            android:label="Sobre"
            android:parentActivityName=".view.MainActivity">
        </activity>
        <activity android:name=".view.ConfigActivity"
            android:label="Configurações"
            android:parentActivityName=".view.MainActivity">
        </activity>
    </application>
</manifest>